[server]
protocol = http
http_addr = 0.0.0.0  
http_port = 3000  
root_url = http://localhost:3000/
router_logging = false
enable_gzip = true  

[security]
admin_user = admin
admin_password = {{ grafana_admin_pass }}  
secret_key = SW2YcwTIb9zpOOhoPsMm  

[database]
type = sqlite3  
path = /var/lib/grafana/grafana.db

[auth.anonymous]
enabled = false  

[auth.basic]
enabled = true  

[users]
allow_sign_up = false  
allow_org_create = false
auto_assign_org = true
auto_assign_org_role = Viewer

[log]
mode = console file
level = info

[alerting]
enabled = false 

[panels]
enable_alpha = false
disable_sanitize_html = false