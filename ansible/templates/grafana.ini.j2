[server]
protocol = http
http_addr = 0.0.0.0  # Доступ со всех интерфейсов
http_port = 3000  # Стандартный порт
root_url = http://localhost:3000/
router_logging = false
enable_gzip = true  # Сжатие для производительности

[security]
admin_user = admin
admin_password = {{ grafana_admin_pass }}  # Пароль из переменных
secret_key = SW2YcwTIb9zpOOhoPsMm  # Ключ для шифрования

[database]
type = sqlite3  # Простая БД
path = /var/lib/grafana/grafana.db

[auth.anonymous]
enabled = false  # Запрет анонимного доступа

[auth.basic]
enabled = true  # Базовая аутентификация

[users]
allow_sign_up = false  # Запрет регистрации
allow_org_create = false
auto_assign_org = true
auto_assign_org_role = Viewer

[log]
mode = console file
level = info

[alerting]
enabled = false  # Отключены алерты

[panels]
enable_alpha = false
disable_sanitize_html = false