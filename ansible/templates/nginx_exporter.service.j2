[Unit]
Description=NGINX Log Exporter
Wants=network-online.target
After=network-online.target nginx.service

[Service]
Type=simple
User=root
ExecStart=/usr/local/bin/prometheus-nginxlog-exporter -config-file /etc/nginx-log-exporter/config.yml
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target