# Конфигурация сборщика логов Filebeat
filebeat.inputs:
- type: log
  paths:
    - /var/log/nginx/access.log  # Сбор access логов nginx
  fields:
    type: nginx-access  # Метка для фильтрации

- type: log
  paths:
    - /var/log/nginx/error.log  # Сбор error логов nginx
  fields:
    type: nginx-error  # Метка для фильтрации

output.elasticsearch:
  hosts: ["{{ elasticsearch_host }}:9200"]  # Куда отправлять логи (динамический адрес из Ansible)